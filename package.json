{
  "name": "front-training",
  "version": "1.0.0",
  "description": "News feed page made with: `HTML`, `CSS` and `JS`.",
  "main": "index.js",
  "scripts": {
    "test": "eslint assets/js",
    "build-scss-dev": "node-sass assets/scss -o assets/css",
    "build-scss-prod": "node-sass assets/scss -o assets/css --output-style compressed",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "watch": "npm-run-all --parallel watch-scss watch-prettier",
    "watch-scss": "npm run build-scss-dev && node-sass --watch --recursive assets/scss -o assets/css",
    "watch-prettier": "onchange . -- prettier --write ."
  },
  "pre-commit": [
    "prettier-fix",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com-styvenflorez:styvenflorez/test-news.git"
  },
  "author": "Styven Florez",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^7.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "2.0.5"
  }
}
